<h1>Editing Address</h1>

<% form_for(@address) do |f| %>
  <%= f.error_messages %>

<fieldset>
    <legend>Address</legend>
    <%= render :partial => "form", :locals=>{ :f => f} %>
</fieldset>

  <fieldset class="button_holder">
    <%= f.submit "Update" %>
  </fieldset>
<% end %>

